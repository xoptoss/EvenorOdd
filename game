package mainPackage;

import java.util.Random;
import java.util.Scanner;

import javax.swing.JOptionPane;

public class mainClass {

	public static void main(String[] args) {

		int numberGen;
		int win=0;
		int lose=0;
		String guess=" ";
		String input;
		Boolean replay, even;
		Random random = new Random();
		numberGen =	random.nextInt(99)+1;

		replay=true;

		do{
			System.out.println("Im thinking of a number.. can you guess if its even or odd?");
			Scanner tKeyboard = new Scanner(System.in);
			guess = tKeyboard.nextLine();

			if(numberGen % 2 == 0)
			{
				even = true;//even
			}
			else 
			{
				even = false;//odd
			}

			switch(guess.toLowerCase()) {

			case "even":
				if(even=true)
				{
					System.out.println("good Job! You were right!");
					win++;
				}
				else
				{
					System.out.println("Aww! You were wrong!");
					lose++;
				}
				break;
			case"odd":
				if(even=true)
				{
					System.out.println("Aww! You were Wrong!");
					lose++;
				}
				else
				{
					System.out.println("Good Job! You were right!");
					win++;				
				}
				break;
			default:
			{
				System.out.println("Not a choice");
			}
			
			}
			System.out.printf("The score is:Wins-%d Loses-%d\n",win, lose);
			System.out.println("Would you like to play agian?");
			input = tKeyboard.nextLine();

			switch(input.toLowerCase()) {

			case"yes":
			{
				replay=true;
				break;
			}
			case"no":
			{
				replay=false;
				break;
			}
			default:
			{
				System.out.println("Not a choice");
			}

			}
		}while(replay=true);
	}
}



